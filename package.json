{
  "scripts": {
    "build": "cp src/index.html public/; esbuild src/app.jsx --bundle --minify --outfile=public/app.js",
    "build:dev": "cp src/index.html public-dev/; esbuild src/app.jsx --bundle --sourcemap --outfile=public-dev/app.js",
    "serve": "npm run build -- --servedir=public",
    "serve:dev": "npm run build:dev -- --servedir=public-dev"
  },
  "devDependencies": {
    "esbuild": "0.19.9"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
